@model FaleConosco
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "EditarFaleConosco";
}

<form method="POST" asp-action="EditarFaleConosco">

    <input type="hidden" asp-for="Id">
    
     <p>
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome">
        </p>

        <p>
            <label asp-for="Telefone">Telefone:</label>
            <input asp-for="Telefone">
        </p>

       <p>
            <label asp-for="Email">E-mail:</label>
            <input asp-for="Email">
        </p>

        <p>
            <label asp-for="Data">Data:</label>
            <input asp-for="Data" type="date">
        </p>

        <p>
            <label asp-for="Necessidade">Necessidade:</label>
            <textarea rows="10" cols="50" type="text" asp-for ="Necessidade"> </textarea> 
        </p>
    <p>
        <input type="submit" value="Salvar Edição">
    </p>

</form>

<p>
    @ViewBag.Mensagem

</p>
