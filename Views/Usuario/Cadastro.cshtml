@model Usuario
@using Microsoft.AspNetCore.Http;
<h1 class="shadow-lg p-3 mb-5 bg-white rounded">Cadastrar Usu√°rio</h1>
@{
    ViewData["Title"] = "Cadastro";
}



    <form method="POST" asp-action="Cadastro">

        <p>
            <label asp-for="Nome">Nome:</label>
            <input id="txtName" name="txtName" onblur ="checarName()" asp-for="Nome">
        </p>

        <p>
            <label asp-for="Login">Login:</label>
            <input id="txtUser" name="txtUser" onblur ="checarUser()" asp-for="Login">
        </p>

        <p>
            <label asp-for="Senha">Senha:</label>
            <input id="txtPass" name="txtPass" onblur ="checarPass()" asp-for="Senha">
        </p>

        <p>
            <label asp-for="DataNascimento">Data de Nascimento:</label>
            <input asp-for="DataNascimento" type="date">
        </p>

        <p>
         <input type="submit" value="Enviar">
        </p>

    </form>

<p>
        @ViewBag.Mensagem

</p>
